 <%= simple_form_for(@project) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :detail %>
  <%= f.input :owner %>
  <%= f.input :main_contractor %>
  <%= f.input :year_completion %>
  <%= f.input :duration %>
  <%= f.input :labor_force %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos
  <%= file_field_tag "images[]", type: :file, multiple: true %>
  <%= f.fields_for :pdfs, @project.pdfs do |ff| %>
    <%= ff.file_field :pdf_file %>
  <% end %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
