
<!-- Body -->
<body>
  <!--Container -->
  <div class="container">
    <!-- Carousel -->
    <div class="carousel">
      <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
          <!-- Carousel indicators-->
          <div class="carousel-indicators">
            <% @project.images.each.with_index do |image, i| %>
              <button type="button" data-bs-target="#carousel" data-bs-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : ''%>"></button>
            <% end %>
          </div>
        <!-- Carousel Images-->
        <div class="carousel-inner-images">
          <% @project.images.each do |image, i| %>
            <div div class="carousel-item active">
              <%= image_tag image %>>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Carousel butons-->
      <div class="carousel-butons">
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

      <!-- Buttons -->
    <div class="back-btn-project">
      <%= link_to "Go to my projects", my_projects_path, class: "btn btn-primary" %>
      <%= link_to "Go to all projects", projects_path, class: "btn btn-primary" %>
    </div>
    <!-- About Project -->
    <div class="project-details row ">
     <!-- Project title -->
      <div class="project-title">
        <h1> <%= @project.title %></h1>
      </div>
      <!-- Project Description -->
      <div class="project-descriptions col-sm-8">
            <p><%= @project.description %></p>
      </div>
      <!-- Infos about Project -->
      <div class="project-infos col-sm-4">
        <!-- Attached files -->
        <div class="files">
          <%= link_to ifc_project_path, target: :_blank do %>
            <%= image_tag("3D_icon.png", alt: 'Logo', width: 50)%>
          <% end %>
          <% if @project.pdf.attached? %>
            <%= link_to @project.pdf.url, target: :_blank do %>
              <%= image_tag("pdf_icon.png", alt: 'Logo', width: 50)%>
            <% end %>
          <% end %>
        </div>
        <br>
        <!-- Separator -->
        <div class="separator">
          <%= image_tag("logoifc.png", width: 300)%>
        </div>
        <br>
        <!-- Mini Infos -->
        <div class="parent project-infos">
          <br>
          <p class="child"><strong>Project Owner</strong></p>
          <p class="child"><%= @project.owner %></p>
          <p><strong>Contractor</strong></p>
          <p><%= @project.main_contractor %></p>
          <p><strong>Duration</strong></p>
          <p><%= @project.duration %></p>
          <p><strong>Total Invested</strong></p>
          <p><%= @project.budget %></p>
          <p><strong>Total Colaborators</strong></p>
          <p><%= @project.labor_force %></p>
          <p><strong>Geolocalization</strong></p>
          <p>long - <%= @project.latitude %></p>
          <p>lat - <%= @project.longitude %></p>
          <iframe width='100%' height='400px' src="https://api.mapbox.com/styles/v1/nmenu/clar5as90000j15p8t59136ay.html?title=false&access_token=pk.eyJ1Ijoibm1lbnUiLCJhIjoiY2xiMmVzMmx4MDNxdzNucDZocWMzMzBqeiJ9.iaB8XyYRWcZ2N6MyVT2WqA&zoomwheel=false#9.02/46.4331/16.1876/331.2/61" title="nm_monochrome_dark" style="border:none;"></iframe>
        </div>
      </div>
    </div>
 </div>
</body>
